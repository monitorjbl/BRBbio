<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.thundermoose.bio.model.Plate" table="plates">
    <id name="id" type="long">
      <column name="ID" />
      <generator class="identity" />
    </id>
    <property name="runId" type="long">
      <column name="RUN_ID" />
    </property>
    <property name="plateName" type="string">
      <column name="PLATE_NAME" />
    </property>
    <property name="createDate" type="timestamp" generated="insert">
      <column name="CREATE_DATE" />
    </property>
    <list name="controls" cascade="all">
      <key column="plate_id" />
      <list-index column="id" />
      <one-to-many class="com.thundermoose.bio.model.Control" />
    </list>
  </class>
  <class name="com.thundermoose.bio.model.Control" table="controls">
    <id name="id" type="long">
      <column name="ID" />
      <generator class="identity" />
    </id>
    <property name="plateId" type="long">
      <column name="PLATE_ID" />
    </property>
    <property name="timeMarker" type="int">
      <column name="TIME_MARKER" />
    </property>
    <property name="negativeControl" type="float">
      <column name="NEGATIVE_CONTROL" />
    </property>
    <property name="positiveControl" type="float">
      <column name="POSITIVE_CONTROL" />
    </property>
    <property name="createDate" type="timestamp" generated="insert">
      <column name="CREATE_DATE" />
    </property>
  </class>
</hibernate-mapping>